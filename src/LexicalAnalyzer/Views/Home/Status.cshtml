<script src="~/js/angular.min.js"></script>
<script src="~/js/angular-route.min.js"></script>
<script src="~/js/statusApp.js"></script>

<div class="row" ng-app="statusApp">
    <h3><span>Status</span></h3><hr />
    <a style="text-align:right; display:block;" asp-area="" asp-controller="Workflow" asp-action="BrowseWorkflows">History</a>
    <div class="row-margin status-container" ng-controller="status">
        <!-- USE ANGULAR JS TO RETRIEVE ACTIVE SCRAPPERS (USE NG_REPEAT TO DISPLAY DATA) -->
        <div class="col-md-5">
            <h4>Active Scrappers</h4>

            <div class="scrapper-status" ng-repeat="scrapper in scrappers">
                <span class="status-pause" ng-click="pauseScrapper({{scrapper.Guid}})"><i class="glyphicon glyphicon-pause"></i></span>

                <span>Name: {{scrapper.DisplayName}}</span>
                <br />
                <span>Date Started: N/A {{scrapper.StartDate}}</span>
                <br />
                <span>Content Type: {{scrapper.ContentType}}</span>
                <br />
                <span>Guid: {{scrapper.Guid + " Index:" + $Index}}</span>

                <hr />
                <div class="progress">
                    <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar"
                         aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:{{scrapper.Progress}}%">
                        {{scrapper.Progress}}% Complete
                    </div>
                </div>
            </div>
        </div>


        <!-- END SCRAPPERS S-->
        <!-- USE ANGULAR JS TO RETRIEVE ACTIVE NEURAL NETWORKS IN TRAINING (USE NG_REPEAT TO DISPLAY DATA) -->
        <div class="col-md-7">
            <h4>Neural Nets in Training</h4>

            <div class="scrapper-status">
                <span class="status-id">{{net.id}}</span>

                <span>Name: {{net.name}}</span>
                <br />
                <span>Date Started: {{net.date}}</span>
                <br />
                <span>Neural Net: {{net.obj}}</span>
                <hr />
                <div class="progress">
                    <div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar"
                         aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:47%">
                        47% Complete
                    </div>
                </div>
            </div>

            <div class="scrapper-status">
                <span class="status-id">{{net.id}}</span>

                <span>Name: {{net.name}}</span>
                <br />
                <span>Date Started: {{net.date}}</span>
                <br />
                <span>Neural Net: {{net.obj}}</span>
                <hr />
                <div class="progress">
                    <div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar"
                         aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:90%">
                        90% Complete
                    </div>
                </div>
            </div>

            <div class="scrapper-status">
                <span class="status-id">{{net.id}}</span>

                <span>Name: {{net.name}}</span>
                <br />
                <span>Date Started: {{net.date}}</span>
                <br />
                <span>Neural Net: {{net.obj}}</span>
                <hr />
                <div class="progress">
                    <div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar"
                         aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:35%">
                        35% Complete
                    </div>
                </div>
            </div>

            <div class="scrapper-status">
                <span class="status-id">{{net.id}}</span>

                <span>Name: {{net.name}}</span>
                <br />
                <span>Date Started: {{net.date}}</span>
                <br />
                <span>Neural Net: {{net.obj}}</span>
                <hr />
                <div class="progress">
                    <div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar"
                         aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                        0% Complete
                    </div>
                </div>
            </div>
        </div>
        <!-- END SCRAPPERS S-->
    </div>
</div>