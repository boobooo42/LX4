<script src="~/js/angular.min.js"></script>
<script src="~/js/angular-route.min.js"></script>
<script src="~/js/manageLearningApp.js"></script>
<link rel="stylesheet" href="~/css/workflow.css" asp-append-version="true" />

<div class="container">
    <div ng-app="manageLearningApp" ng-controller="ManageLearningController">
        
        <div id="learningEdit" class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead id="editTHead">
                    <tr>
                        <th>GUID</th>
                        <th>Status</th>
                        <th>Type</th>
                        @*<th>Progress</th>
                        <th>Priority</th>*@
                        <th>Result</th>
                    </tr>
                </thead>
                <tbody id="editTBody" class="table">
                    <tr ng-repeat="learning in currentLearningList">
                        <th scope="row" class="guid"> {{learning.guid}} </th>
                        <th scope="row"> {{learning.status}} </th>
                        <th scope="row" title="{{learning.desc}}" class="type"> {{learning.type}} </th>
                        @*<th scope="row"> {{learning.progress}} </th>
                        <th scope="row"> {{learning.priority}} </th>*@
                        <th scope="row"> {{learning.result}} </th>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>